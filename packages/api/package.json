{
  "name": "@for-the-people-initiative/messaging-api",
  "version": "1.0.0",
  "description": "Hono-based REST API for messaging module",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@for-the-people-initiative/messaging-core": "workspace:*",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@types/node": "^22.15.31",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "keywords": [
    "messaging",
    "api",
    "hono",
    "rest"
  ],
  "author": "For the People",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryuforthepeople/messaging"
  }
}
